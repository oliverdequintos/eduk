<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Remove Teacher</h3>
    </div>
    <div class="modal-body">
      <ul class="errors"></ul>
      Are you sure you wish to remove <b><%= @teacher.first_name %></b>?
    </div>
    <div class="modal-footer">
      <%= link_to "Yes, Remove This Teacher", teacher_path(@teacher), method: :delete, remote: true, class: "btn btn-info" %>
      <%= link_to "No, Please Don't", "#", class: "btn btn-danger", data: { dismiss: "modal" } %>
    </div>
  </div>
</div>
