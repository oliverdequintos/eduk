<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Delete Subject</h3>
    </div>
    <div class="modal-body">
      <ul class="errors"></ul>
      Are you sure you wish to delete <b><%= @subject.subject_code %></b>?
    </div>
    <div class="modal-footer">
      <%= link_to "Yes, Delete This Subject", subject_path(@subject), method: :delete, remote: true, class: "btn btn-info" %>
      <%= link_to "No, Please Don't", "#", class: "btn btn-danger", data: { dismiss: "modal" } %>
    </div>
  </div>
</div>
